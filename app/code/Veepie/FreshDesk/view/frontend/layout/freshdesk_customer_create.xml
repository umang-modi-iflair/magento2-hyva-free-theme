<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <script src="tiny_mce_5/tinymce.min.js"/>
    </head>
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home</item>
                    <item name="label" xsi:type="string">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string" translate="true">My Tools</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">My Tools</item>
                    <item name="label" xsi:type="string" translate="true">My Tools</item>
                    <item name="link" xsi:type="string">{{baseUrl}}customer/account</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string" translate="true">My Tickets</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">My Tickets</item>
                    <item name="label" xsi:type="string" translate="true">My Tickets</item>
                    <item name="link" xsi:type="string">{{baseUrl}}freshdesk/customer</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string" translate="true">Create ticket</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Create ticket</item>
                    <item name="label" xsi:type="string" translate="true">Create ticket</item>
                </argument>
            </action>
        </referenceBlock>

        <referenceContainer name="content">
            <block class="Veepie\FreshDesk\Block\Create" name="freshdesk.create" template="Veepie_FreshDesk::create.phtml" cacheable="false" />
        </referenceContainer>
    </body>
</page>
