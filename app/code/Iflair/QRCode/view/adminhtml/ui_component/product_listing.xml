<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:framework:Ui/etc/ui_configuration.xsd">

    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="generate_qr">
                <settings>
                    <type>generate_qr</type>
                    <label translate="true">Generate QR Code</label>
                    <url path="qrcode/product/massGenerate"/>
                    <confirm>
                        <title translate="true">Generate QR Codes</title>
                        <message translate="true">
                            Are you sure you want to generate QR codes for selected products?
                        </message>
                    </confirm>
                </settings>
            </action>
        </massaction>
    </listingToolbar>

</listing>
