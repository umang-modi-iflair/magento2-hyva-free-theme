<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">faq_listing.faq_listing_data_source</item>
        </item>
    </argument>

    <settings>
        <spinner>faq_columns</spinner>
        <deps>
            <dep>faq_listing.faq_listing_data_source</dep>
        </deps>
        <buttons>
            <button name="add">
                <url path="*/*/add"/>
                <class>primary</class>
                <label translate="true">Add New Question</label>
            </button>
        </buttons>
    </settings>

    <!-- DATA SOURCE -->
    <dataSource name="faq_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Iflair\Faq\Ui\DataProvider\FaqListingDataProvider</argument>
            <argument name="name" xsi:type="string">faq_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">faq_id</argument>
            <argument name="requestFieldName" xsi:type="string">faq_id</argument>

            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">faq_id</item>
                    </item>
                </item>
            </argument>
        </argument>

        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
            </item>
        </argument>
    </dataSource>

    <!-- TOOLBAR -->
    <listingToolbar name="listing_top">
     
          <massaction name="listing_massaction">
            <argument name="data" xsi:type="array">
                <item name="selectProvider" xsi:type="string">
                    countdown_listing.countdown_listing.countdown_columns.ids
                </item>
                <item name="displayArea" xsi:type="string">bottom</item>
                <item name="indexField" xsi:type="string">widget_id</item>
            </argument>

             <action name="massDelete">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">delete</item>
                        <item name="label" xsi:type="string" translate="true">Delete</item>
                        <item name="url" xsi:type="url" path="faq/faq/massDelete"/>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Delete FAQ?</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure you want to delete the selected FAQ(s)?</item>
                        </item>
                    </item>
                </argument>
            </action>

            <action name="send_email">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">email</item>
                        <item name="label" xsi:type="string" translate="true">Send Email</item>
                        <item name="url" xsi:type="url" path="faq/faq/massSendEmail"/>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Send Email</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure you want to send emails for selected FAQ(s)?</item>
                        </item>
                    </item>
                </argument>
            </action>

        </massaction>

        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>

    <!-- COLUMNS -->
    <columns name="faq_columns">

        <selectionsColumn name="ids">
            <settings>
                <indexField>faq_id</indexField>
            </settings>
        </selectionsColumn>
<!-- 
        <column name="sr_no" sortOrder="10">
            <settings>
                <label translate="true">Serial No</label>
                <sortable>false</sortable>
                <filter>false</filter>
            </settings>
        </column> -->

        <column name="faq_id">
            <settings>
                <label>ID</label>
                <filter>text</filter>
                <sorting>asc</sorting>
            </settings>
        </column>

        <column name="customer_name">
            <settings>
                <label>Customer Name</label>
                <filter>text</filter>
                <sorting>asc</sorting>
            </settings>
        </column>

        <column name="customer_email">
            <settings>
                <label>Customer Email</label>
                <filter>text</filter>
                <sorting>asc</sorting>
            </settings>
        </column>

        <column name="question">
            <settings>
                <label>Question</label>
            </settings>
        </column>

          <!-- <column name="product_id">
            <settings>
                <label>Product ID</label>
                <sortable>true</sortable>
                <filter>text</filter>
            </settings>
        </column> -->

<!-- 
        <column name="url_key">
            <settings>
                <label>URL Key</label>
            </settings>
        </column> -->

        <!-- <column name="store_view" class="Magento\Store\Ui\Component\Listing\Column\Store">
            <settings>
                <label>Store View</label>
            </settings>
        </column> -->

        <column name="status">
            <settings>
                <label>Status</label>
                <dataType>select</dataType>
                <options class="Iflair\Faq\Model\Source\StatusOptions"/>
            </settings>
        </column>

        <column name="visibility">
            <settings>
                <label>Visibility</label>
                <dataType>select</dataType>
                <options class="Iflair\Faq\Model\Source\VisibilityOptions"/>
            </settings>
        </column>
 
        <actionsColumn name="actions"
                       class="Iflair\Faq\Ui\Component\Listing\Column\EditAction"
                       sortOrder="200">
            <settings>
                <indexField>faq_id</indexField>
            </settings>
        </actionsColumn>

    </columns>

</listing>
