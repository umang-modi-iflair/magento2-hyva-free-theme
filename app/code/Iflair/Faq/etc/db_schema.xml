<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="iflair_faq" resource="default" engine="innodb" comment="Iflair FAQ Table">
        
        <column name="faq_id" xsi:type="int" nullable="false" identity="true" unsigned="true" comment="FAQ ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="faq_id"/>
        </constraint>

        <column name="question" xsi:type="text" nullable="false" comment="FAQ Question"/>
        
        <column name="status" xsi:type="smallint" nullable="false" default="0" comment="FAQ Status"/>

        <column name="visibility" xsi:type="smallint" nullable="false" default="1" comment="Visibility"/>

        <column name="answer" xsi:type="text" nullable="false" comment="FAQ Answer"/> 

        <column name="customer_name" xsi:type="varchar" length="255" nullable="true" comment="Customer Name"/>
        
        <column name="customer_email" xsi:type="varchar" length="255" nullable="true" comment="Customer Email"/>
        
    </table>

    <table name="iflair_faq_product" resource="default" engine="innodb" comment="FAQ to Product Link Table">

        <column xsi:type="int" name="id" identity="true" unsigned="true" nullable="false" comment="ID"/>
        <column xsi:type="int" name="faq_id" nullable="false" unsigned="true" comment="FAQ ID"/>
        <column xsi:type="int" name="product_id" nullable="false" unsigned="true" comment="Product ID"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <index referenceId="FAQ_ID_INDEX">
            <column name="faq_id"/>
        </index>

        <index referenceId="PRODUCT_ID_INDEX">
            <column name="product_id"/>
        </index>

        <constraint xsi:type="foreign" referenceId="FK_FAQ_PRODUCT_FAQ"
                    table="iflair_faq_product" column="faq_id"
                    referenceTable="iflair_faq" referenceColumn="faq_id"
                    onDelete="CASCADE"/>

        <constraint xsi:type="foreign" referenceId="FK_FAQ_PRODUCT_PRODUCT"
                    table="iflair_faq_product" column="product_id"
                    referenceTable="catalog_product_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>

    </table>

</schema>
