<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">countdown_edit.countdown_edit_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <buttons>
            <button name="save">
                <url path="*/*/save"/>
                <class>primary</class>
                <label translate="true">Save</label>
            </button>
        </buttons>
        <namespace>countdown_edit</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>countdown_edit.countdown_edit_data_source</dep>
        </deps>
    </settings>

    <dataSource name="countdown_edit_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="countdowntimer/countdowntimer/save"/>
        </settings>
        <dataProvider class="Iflair\CountDownTimer\Ui\DataProvider\ListingDataProvider"
                      name="countdown_edit_data_source">
            <settings>
                <requestFieldName>widget_id</requestFieldName>
                <primaryFieldName>widget_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general">
        <settings>
            <label translate="true">Edit Timer</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>

        <field name="widget_id" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>widget_id</dataScope>
            </settings>
        </field>

         <!-- Widget Name -->
        <field name="name" sortOrder="20" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Widget Name</label>
                <dataScope>name</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

      <!-- Start Time -->
        <field name="start_time" formElement="date">
            <settings>
                <dataType>date</dataType>
                <label translate="true">Start Date</label>
                <dataScope>start_time</dataScope>
            </settings>
        </field>

        <!-- End Time -->
        <field name="end_time" formElement="date">
            <settings>
                <dataType>date</dataType>
                <label translate="true">End Date</label>
                <dataScope>end_time</dataScope>
            </settings>
        </field>

        <field name="category_ids" sortOrder="45" formElement="multiselect">
            <settings>
                <dataType>text</dataType>
                <label translate="true"> Categories</label>
                <dataScope>category_ids</dataScope>
                <!-- <notice translate="true">Leave empty to show on every allowed page.</notice> -->
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                    <options class="Iflair\CountDownTimer\Model\Config\Source\AllCategories"/></settings>
                </multiselect>
            </formElements>
        </field>

        <!-- Active (Yes/No) -->
        <field name="is_active" sortOrder="50" formElement="select">
            <settings>
                <dataType>int</dataType>
                <label translate="true">Is Active?</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="enabled" xsi:type="array">
                                <item name="value" xsi:type="string">1</item>
                                <item name="label" xsi:type="string">Yes</item>
                            </option>
                            <option name="disabled" xsi:type="array">
                                <item name="value" xsi:type="string">0</item>
                                <item name="label" xsi:type="string">No</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="product_id" sortOrder="40" formElement="select">
            <settings>
                <dataType>int</dataType>
                <label translate="true">Product</label>
                <dataScope>product_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Iflair\CountDownTimer\Model\Config\Source\ProductOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="display_on" sortOrder="46" formElement="multiselect">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Display On</label>
                <dataScope>display_on</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                       <options class="Iflair\CountDownTimer\Model\Config\Source\DisplayOn"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>


    </fieldset>
</form>
