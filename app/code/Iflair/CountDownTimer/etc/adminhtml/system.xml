<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Backend:etc/system_file.xsd">
    <system>
        <tab id="countdown_tab" translate="label" sortOrder="200">
            <label>Countdown Timer</label>
        </tab>
        <section id="countdown_config" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Promo Countdown Settings</label>
            <tab>countdown_tab</tab>
            <resource>Iflair_CountDownTimer::config</resource>

            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>

                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Promo Countdown</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Select Yes to enable the countdown timer globally</comment>
                </field>
<!-- 
                <field id="display_on" translate="label" type="multiselect" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Display Countdown On</label>
                    <source_model>Iflair\CountDownTimer\Model\Config\Source\DisplayOn</source_model>
                    <comment>Select the pages where the countdown should appear</comment>
                </field> -->


            </group>
        </section>
    </system>
</config>
