<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="size_chart_unit"
           resource="default"
           engine="innodb"
           comment="Size Chart Unit">

        <column xsi:type="int"
                name="sizeunit_id"
                unsigned="true"
                nullable="false"
                identity="true"
                comment="Size Chart Unit ID"/>

        <column xsi:type="varchar"
                name="size_unit"
                length="255"
                nullable="false"
                comment="Size Unit Name"/>

        <column xsi:type="smallint"
                name="status"
                nullable="false"
                default="1"
                comment="Status (1 = Yes, 0 = No)"/>

        <column xsi:type="timestamp"
                name="created_at"
                nullable="false"
                default="CURRENT_TIMESTAMP"
                on_update="false"
                comment="Created At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="sizeunit_id"/>
        </constraint>

    </table>

</schema>
