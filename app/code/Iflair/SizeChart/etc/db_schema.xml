<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="size_chart_unit" resource="default" engine="innodb" comment="Size Chart Unit">
        <column xsi:type="int" name="sizeunit_id" unsigned="true" nullable="false" identity="true" comment="Size Chart Unit ID"/>
        <column xsi:type="varchar" name="size_unit" length="255" nullable="false" comment="Size Unit Name"/>
        <column xsi:type="smallint" name="status" nullable="false" default="1" comment="Status (1 = Yes, 0 = No)"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="sizeunit_id"/>
        </constraint>
    </table>

    <table name="size_chart_measurement" resource="default" engine="innodb" comment="Size Chart Measurement">
        <column xsi:type="int" name="measurement_id" unsigned="true" nullable="false" identity="true" comment="Size Chart Measurement ID"/>
        <column xsi:type="varchar" name="measurements" length="255" nullable="false" comment="Size Measurement Name"/>
        <column xsi:type="smallint" name="status" nullable="false" default="1" comment="Status (1 = Yes, 0 = No)"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="measurement_id"/>
        </constraint>
    </table>
    
    <table name="size_chart_templates" resource="default" engine="innodb">
        <column xsi:type="int" name="template_id" unsigned="true" nullable="false" identity="true"/>
        <column xsi:type="varchar" name="template_name" length="255" nullable="false"/>
        <column xsi:type="longtext" name="size_chart_data" nullable="true"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="template_id"/>
        </constraint>
    </table>

    <table name="size_chart_product" resource="default" engine="innodb">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true"/>
        <column xsi:type="int" name="template_id" unsigned="true" nullable="false"/>
        <column xsi:type="int" name="product_id" unsigned="true" nullable="false"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="FK_SIZE_CHART_TEMPLATE_ID" 
                    table="size_chart_product" column="template_id" 
                    referenceTable="size_chart_templates" referenceColumn="template_id" 
                    onDelete="CASCADE"/>

        <constraint xsi:type="foreign" referenceId="FK_SIZE_CHART_PRODUCT_ID" 
                    table="size_chart_product" column="product_id" 
                    referenceTable="catalog_product_entity" referenceColumn="entity_id" 
                    onDelete="CASCADE"/>
    </table>
</schema>


<!-- catalog_product_entity -> entity_id
size_chart_templates -> id
size_chart_product -> template_id -->