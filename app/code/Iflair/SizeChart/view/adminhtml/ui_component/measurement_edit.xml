<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">measurement_edit.measurement_edit_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Measurement Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <buttons>
        <button name="back">
                <url path="*/*/index"/> 
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="save">
                <url path="*/*/save"/>
                <class>primary</class>
                <label translate="true">Save</label>
            </button>
        </buttons>
        <namespace>measurement_edit</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>measurement_edit.measurement_edit_data_source</dep>
        </deps>
    </settings>

    <dataSource name="measurement_edit_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="sizechart/measurement/save"/>
        </settings>
        <dataProvider class="Iflair\SizeChart\Ui\DataProvider\AddMeasurementDataProvider"
                      name="measurement_edit_data_source">
            <settings>
                <requestFieldName>measurement_id</requestFieldName>
                <primaryFieldName>measurement_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general">
        <settings>
            <label translate="true">Measurements Information</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>

        <field name="measurement_id" formElement="hidden">
            <settings>
                <dataType>int</dataType>
                <dataScope>measurement_id</dataScope>
            </settings>
        </field>

        <field name="status" sortOrder="10" formElement="select">
                <settings>
                    <dataType>int</dataType>
                    <label translate="true">Status</label>
                    <dataScope>status</dataScope>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options class="Iflair\SizeChart\Model\Source\StatusOption"/>
                        </settings>
                    </select>
                </formElements>
            </field>

        <field name="measurements" sortOrder="20" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true"> Measurements Name </label>
                <dataScope>measurements</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
