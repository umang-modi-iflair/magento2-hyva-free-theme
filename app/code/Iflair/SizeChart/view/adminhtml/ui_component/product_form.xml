<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="size_chart_section">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Size Chart Templates</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">10</item>
                <item name="componentType" xsi:type="string">fieldset</item>
            </item>
        </argument>
        <field name="size_chart_template_id" formElement="select" sortOrder="10">
            <settings>
                <dataType>int</dataType>
                <label translate="true">Size Chart Template</label>
                <dataScope>product.size_chart_template_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Iflair\SizeChart\Model\Source\SizeChartTemplate"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <htmlContent name="demo_tab_content">
            <block class="Iflair\SizeChart\Block\Adminhtml\Product\Edit\Tab\Product" name="demo.tab.block" template="Iflair_SizeChart::product/edit/tab/product_chart.phtml"/>
        </htmlContent>
    </fieldset>
</form>