<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/aiassistance/ask" method="POST">
        <service class="Iflair\Aiassistance\Api\AskInterface" method="ask"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/aiassistance/test" method="GET">
        <service class="Iflair\Aiassistance\Api\AskInterface" method="testConnection"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>