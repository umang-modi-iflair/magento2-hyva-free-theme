<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="iflair_aiassistance" translate="label" type="text" sortOrder="900" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>AI Assistance Settings</label>
            <tab>general</tab>
            <resource>Iflair_Aiassistance::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Ollama Configuration</label>

                <field id="enabled" translate="label" type="select" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="ollama_endpoint" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Ollama Endpoint</label>
                    <comment>e.g., http://localhost:11434</comment>
                    <validate>required-entry validate-url</validate>
                </field>

                <field id="model_name" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Model Name</label>
                    <comment>e.g. llama3.1. Must support function calling.</comment>
                    <validate>required-entry</validate>
                </field>

                <field id="api_key" translate="label comment" type="obscure" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Ollama API Key</label>
                    <comment>Enter your Ollama API key (if needed)</comment>
                </field>
                
               <field id="magento_api_token" translate="label comment" type="obscure" sortOrder="27" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Magento API Token</label>
                    <comment>Admin Integration Token for product search API calls.</comment>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
               </field>
                
                <field id="timeout" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Request Timeout (seconds)</label>
                    <comment>Default: 60 seconds.</comment>
                    <validate>validate-number validate-greater-than-zero</validate>
                </field>

            </group>
        </section>
    </system>
</config>