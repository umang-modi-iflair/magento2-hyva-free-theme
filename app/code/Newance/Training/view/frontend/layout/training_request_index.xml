<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Opleiding op maat</argument>
            </action>
        </referenceBlock>

        <referenceContainer name="content">
            <block class="Magento\Cms\Block\Block" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">training_request_top_banner</argument>
                </arguments>
            </block>

            <block class="Magento\Framework\View\Element\Template" name="training_request" template="Newance_Training::request/request.phtml" >
                <container name="training_request_text_container">
                    <block class="Magento\Cms\Block\Block" name="training_request_text" before="-">
                        <arguments>
                            <argument name="block_id" xsi:type="string">training_request_text</argument>
                        </arguments>
                    </block>
                </container>
            </block>
        </referenceContainer>

        <move element="recaptcha_validation_recaptcha" destination="training_request" as="recaptcha_validation"/>
    </body>
</page>
