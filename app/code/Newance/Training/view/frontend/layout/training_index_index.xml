<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="training_default" />
    <update handle="training_post_list" />

    <body>
        <referenceContainer name="content">
            <block class="Magento\Cms\Block\Block" name="training_footer" after="-">
                <arguments>
                  <argument name="block_id" xsi:type="string">training_footer</argument>
                </arguments>
            </block>

            <block class="Newance\Training\Block\Index" name="training.posts.list" template="Newance_Training::post/list.phtml">
                <block class="Newance\Training\Block\Post\PostList\Toolbar" name="post_list_toolbar" template="Newance_Training::post/list/toolbar.phtml">
                    <block class="Newance\Training\Block\Post\PostList\Toolbar\Pager" name="post_list_toolbar_pager" />
                </block>
                <action method="setToolbarBlockName">
                    <argument name="name" xsi:type="string">post_list_toolbar</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
