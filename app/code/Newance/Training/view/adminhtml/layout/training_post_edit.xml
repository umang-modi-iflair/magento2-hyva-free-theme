<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="jquery/fileUploader/css/jquery.fileupload-ui.css"/>
    </head>

    <update handle="editor"/>

    <body>
        <referenceContainer name="content">
            <block class="Newance\Training\Block\Adminhtml\Post\Edit" name="training.post.edit" />
        </referenceContainer>

        <referenceContainer name="left">
            <block class="Newance\Training\Block\Adminhtml\Post\Edit\Tabs" name="training.post.edit.tabs">
                <block class="Newance\Training\Block\Adminhtml\Post\Edit\Tab\Main" name="training.post.edit.tab.main"/>
                <block class="Newance\Training\Block\Adminhtml\Post\Edit\Tab\Content" name="training.post.edit.tab.content"/>
                <block class="Newance\Training\Block\Adminhtml\Post\Edit\Tab\Meta" name="training.post.edit.tab.meta"/>

                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">training.post.edit.tab.main</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">content_section</argument>
                    <argument name="block" xsi:type="string">training.post.edit.tab.content</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">meta_section</argument>
                    <argument name="block" xsi:type="string">training.post.edit.tab.meta</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
